<?xml version="1.0" encoding="utf-8" ?> 
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="entities.User" table="Users">

		<id name="UserId" column="USER_ID">
			<generator class="sequence">
				<param name="sequence">SEQ_USERS</param>
			</generator>
		</id>

		<property name="Username" column="USERNAME"/>
		<property name="FirstName" column="FIRST_NAME"/>
		<property name="LastName" column="LAST_NAME"/>
		<property name="Password" column="PASSWORD"></property>
		
		<bag name="Categories" table="Categories">
			<key column="USER_ID"/>
			<one-to-many class="entities.Category"/>
		</bag>
		
		<bag name="Comments" table="Comments">
			<key column="USER_ID"/>
			<one-to-many class="entities.Comment"/>
		</bag>
		
		
			
    </class>
</hibernate-mapping>
