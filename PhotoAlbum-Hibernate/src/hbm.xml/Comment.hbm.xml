<?xml version="1.0" encoding="utf-8" ?> 
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="entities.Comment" table="Comments">

		<id name="COMMENT_ID">
			<generator class="sequence">
				<param name="sequence">SEQ_COMMENTS</param>
			</generator>
		</id>

		<property name="Text" />
		
		<many-to-one name="User" class="entities.User" column="USER_ID"/>
		
		<many-to-one name="Photo" class="entities.Photo" column="PHOTO_ID"/>
		
	</class>
</hibernate-mapping>
