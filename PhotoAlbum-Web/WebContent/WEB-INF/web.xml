<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>
	PhotoAlbum-Web</display-name>
	<servlet>
		<description>
		This servlets initializes the session, i.e. sets the PAM and allUsers properties.</description>
		<display-name>
		InitSessionServlet</display-name>
		<servlet-name>InitSessionServlet</servlet-name>
		<servlet-class>
		photoalbum.web.servlets.InitSessionServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		RegistrationServlet</display-name>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>
		photoalbum.web.servlets.RegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>
		photoalbum.web.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InitSessionServlet</servlet-name>
		<url-pattern>/initSession</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>mainPage.jsp</welcome-file>
	</welcome-file-list>
</web-app>
