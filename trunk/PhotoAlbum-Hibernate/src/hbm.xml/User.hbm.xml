<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="photoalbum.entities">

    <class name="User" table="USERS">
		<id name="UserID" column="USER_ID" type="int">
			<generator class="sequence">
				<param name="sequence">SEQ_USERS</param>
			</generator>
		</id>
		
		<set name="Categories" table="CATEGORIES" cascade="all">
        	<key column="USER_ID" />
        	<one-to-many class="Category" />
        </set>
		
		<set name="Comments" table="COMMENTS" cascade="all">
        	<key column="USER_ID" />
        	<one-to-many class="Comment" />
        </set>
        
        <property name="Username" column="USERNAME" not-null="true" />
        <property name="FirstName" column="FIRST_NAME" not-null="true" />
        <property name="LastName" column="LAST_NAME" not-null="true" /> 
        <property name="Password" column="PASSWORD" not-null="true" />      
	</class>

</hibernate-mapping>